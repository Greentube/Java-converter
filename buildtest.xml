<?xml version="1.0" encoding="UTF-8"?>
<project name="Build java converter test project" default="build">

  <taskdef name="convertJava2JavaScript" classname="com.greentube.javaconverter.source2source.Java2JavaScriptAntTask"/> 
  <taskdef name="linkJavaScript" classname="com.greentube.javaconverter.linker.JavaScriptLinkerAntTask"/> 
			
  <target name="build">
  	
  	<delete dir="${basedir}/build"/>
    <mkdir dir="${basedir}/build/javascript" />
    <convertJava2JavaScript dest="${basedir}/build/javascript" external="${basedir}/runtime">
        <fileset dir="${basedir}">
            <include name="test/**/*.java"/>
        </fileset>
    </convertJava2JavaScript>
  	
    <linkJavaScript 
    		output="${basedir}/build/javascript/main.js" 
    		searchpath="${basedir}/build/javascript,${basedir}/runtimejs"
    		mainfile="com/greentube/convertertest/Test"
    		>
    </linkJavaScript>		

  </target>
  
  <target name="clean">
	<delete dir="${basedir}/build"/>  	
  </target>

  <target name="cleanbuild" depends="clean,build">
  </target>
  	
</project>
